<table class="ui celled table">
  <thead>
    <tr>
      <td>Names</td>
      <td>+</td>
      <td>-</td>
      <td>+-</td>
      <td>W</td>
      <td>D</td>
      <td>L</td>
      <td>Form</td>
      <td>Pts</td>
    </tr>
  </thead>
  <tbody>
    {% for team in teams %}
      <tr>
        <td><a href="/team/{{team.id}}">{{team.name}}</a></td>
        <td>{{team.getFplPoints}}</td>
        <td>{{team.getPointsAgainst}}</td>
        <td>{{team.getPointsDifference}}</td>
        <td>{{team.getWins}}</td>
        <td>{{team.getDraws}}</td>
        <td>{{team.getLosses}}</td>
        <td>{{team.getForm}}</td>
        <td>{{team.getTotalPoints}}</td>
      </tr>
    {% endfor %}

  </tbody>
</table>