<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>+</td>
      <td>Pts</td>
      <td>Form</td>
    </tr>
  </thead>
  <tbody>
    {{#each teams}}
    <tr>
      <td><a href="/team/{{id}}">{{name}}</a></td>
      <td>{{getFplPoints}}</td>
      <td>{{getTotalPoints}}</td>
      <td>{{getForm}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<p><strong>Form:</strong> Calculated from average of last 5 gameweeks</p>